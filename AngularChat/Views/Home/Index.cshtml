@{
    ViewBag.Title = "Chat";
}
<h2>Chat</h2>
<div class="container" ng-controller="ChatController as chat">
    <input type="text" id="message" ng-model="msg.message" />
    <input type="button" value="Send" ng-click="sendMessage(msg.message,msg.user)" />
    <input type="hidden" id="displayname" ng-model="msg.user" />
    <ul class="message-box">
        <li ng-repeat="message in messages">
            <div class="message" ng-class="message.user==msg.user ? 'sender' : 'other-user'">{{message.message}}</div>
            <div ng-class="message.user==msg.user ? 'sender' : 'other-user'">{{message.user}}</div>
        </li>
    </ul>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/controllers/chat-controller.js"></script>
    <script src="~/Scripts/services/services.js"></script>

}